@model BookContact.Models.ViewModels.DetailsBook

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBook.AuthorName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SelectedBook.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBook.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SelectedBook.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBook.ISBN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SelectedBook.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBook.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SelectedBook.BorrowingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBook.BorrowingDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SelectedBook.BookId }) |
    @Html.ActionLink("Back to List", "List")
</p>

<div>
    <h3>Rented Information</h3>
    <ul>
        @foreach (var book in Model.RentedBooks)
        {
            <li>
                @*<a href="@book.BookId">@book.Title</a>*@
                Rented At: <a href="@book.RentalDate">@book.RentalDate</a>
                Due At: <a href="@book.DueDate">@book.DueDate</a>
            </li>
        }
    </ul>
</div>

<div>
    <h3>Reviews</h3>
    <ul>
        @foreach (var book in Model.BookReview)
            {
                <li>@book.Reviews</li>
                <li>@book.Comments</li>
            }
    </ul>
</div>