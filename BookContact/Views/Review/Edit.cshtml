@model BookContact.Models.ViewModels.UpdateReview

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


<form action="/Review/Update/@Model.SelectedReview.ReviewId" method="post">
    <div class="form-group">
        <label>Select a Book</label>
        <select name="BookId" class="form-control">
            @foreach (var book in Model.BookOptions)
            {
                <option value="@book.BookId">@book.Title</option>

            }
        </select>
    </div>

    <div class="form-group">
        <label for="form-label">Review</label>
        <input type="text" class="form-control" name="Reviews" value="@Model.SelectedReview.Reviews" />
    </div>

    <div class="form-group">
        <label for="form-label">Comment</label>
        <input type="text" class="form-control" name="Comments" value="@Model.SelectedReview.Comments" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update Review" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
