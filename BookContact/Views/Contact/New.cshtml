@model BookContact.Models.ViewModels.DetailsContact

@{
    ViewBag.Title = "New Contact";
}

<h2>New Contact</h2>

@using (Html.BeginForm("Create", "Contact", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Contact Details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Contact.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Contact.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contact.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contact.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Contact.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contact.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contact.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Contact.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contact.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contact.Address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Contact.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contact.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Author", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="AuthorId" class="form-control">
                @foreach (var author in Model.AuthorOption)
                {
                    <option value="@author.AuthorId">@author.AuthorName</option>

                }
            </select>
            <p>
                NB: If no Author is available
                <a class="" href="@Url.Action("New", "Author")">Click here to add an Author</a>
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Rental", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="RentalId" class="form-control">
                @foreach (var rental in Model.RentalOption)
                {
                    <option value="@rental.RentalId">@rental.Title</option>

                }
            </select>
            <p>
                NB: If no Rental is available
                <a class="" href="@Url.Action("New", "Rental")">Click here to add a rental</a>
            </p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
