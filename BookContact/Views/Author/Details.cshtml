@model BookContact.Models.ViewModels.DetailsAuthor

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SelectedAuthor.AuthorName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedAuthor.AuthorName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SelectedAuthor.Biography)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedAuthor.Biography)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SelectedAuthor.AuthorId }) |
    @Html.ActionLink("Back to List", "List")
</p>

<div>
    <h3>Books related to this Author</h3>
    <ul>
        @foreach (var book in Model.RelatedBooks)
        {
            <li>
                <a href="@book.BookId">@book.Title</a>
            </li>
        }
    </ul>
</div>